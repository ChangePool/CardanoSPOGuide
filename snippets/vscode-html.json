{
	// Place your snippets for html here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	//
	// Dashes
	//
	"– en": {
    	"prefix": "--",
    	"body": "–"
	},
	
	"— em": {
    	"prefix": "---",
    	"body": "—"
	},

	//
	// HTML Entities
	//
	"& HTML Entity": {
		"prefix": "Ampersand",
		"body": "&amp;"
	},

	"{ HTML Entity": {
		"prefix": "Left Brace",
		"body": "&#123;"
	},

	"} HTML Entity": {
		"prefix": "Right Brace",
		"body": "&#125;"
	},

	"< HTML Entity": {
		"prefix": "Less Than",
		"body": "&lt;"
	},

	"> HTML Entity": {
		"prefix": "Greater Than",
		"body": "&gt;"
	},

	"\" HTML Entity": {
		"prefix": "Quotation Mark",
		"body": "&quot;"
	},

	"' HTML Entity": {
		"prefix": "Apostrophe",
		"body": "&apos;"
	},

	"\" \" HTML Entity": {
		"prefix": "Non-breaking Space",
		"body": "&nbsp;"
	},

	//
	// Snippets for the CoinCashew Guide template using Docusaurus
	//
	"New MDX Topic": {
		"prefix": ["Topic"],
		"body": [
			"---",
			"title: \"$1<TopicTitle>\"",
			"sidebar_label: \"$2<SidebarText>\"",
			"slug: /$3<CustomURL>",
			"hide_title: $4<true|false>",
			"sidebar_position: $5<Number>",
			"---\n",
			"import React from 'react';\n",
			"export function HTMLContent() {",
			"\treturn (",
			"\t\t<div>\n",
		    "\t\t\t{/* INSERT HTML HERE */}\n",
			"\t\t\t$6\n",
		    "\t\t</div>",
			"\t);",
			"}",
			"",
			"<HTMLContent />"
		],
		"description": "Template for new topics using Markdown Using JavaScript XML (MDX) format in the coincashew.io Web site created using Docusaurus"
	},

	"Code Block": {
		"prefix": "Code Block",
		"body": [
			"<pre>",
			"\t{$1<ConstantName>} |",
			"\t$2<br />",
			"\t&nbsp;&nbsp;<br />",
			"\t<br />",
			"</pre>"
		],
		"description": "Snippet for a code block in the coincashew.io Web site created using Docusaurus"
	},

	"Define Multiline String": {
		"prefix": "Code Block Constant",
		"body": [
			"const $1<ConstantName> = `$2<MultilineString>`;"
		],
		"description": "Snippet for defining a multiline string in the definition of a JSX function, used to preserve whitespace in a code block"
	}

}